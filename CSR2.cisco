conf t
hostname CSR2
no ip domain lookup

router isis 1
 net 00.0000.0000.0002.00
 is-type level-2-only
 metric-style narrow

interface Loopback0
 ip address 10.2.2.2 255.255.255.255

interface GigabitEthernet1
 no shutdown
 ip address 10.2.8.2 255.255.255.0
 ip router isis 1

interface GigabitEthernet2
 no shutdown
 ip address 10.2.6.2 255.255.255.0
 ip router isis 1

router isis 1
 passive-interface Loopback0
 mpls ldp autoconfig

line con 0
 exec-timeout 0 0

int r g1-7
 cdp en

do wr
