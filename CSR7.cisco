! VPLS E-LAN BGP Auto Discovery with LDP Signaling
conf t
int g3
service instance 1000 ethernet
encapsulation dot1q 1000
exit
exit

l2 vfi context BGP_AD
vpn id 1000
autodiscovery bgp signaling ldp
auto-route-target
exit
exit

bridge-domain 1000
member g3 service-instance 1000
member vfi BGP_AD

router bgp 1
no bgp def ipv4
neighbor 10.8.8.8 remote-as 1
neighbor 10.8.8.8 update-source loopback 0
address-family l2vpn vpls
neighbor 10.8.8.8 activate
do wr
